@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Price Comparison Project</h1>
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <p class="lead mb-4">
                    A full-stack ASP.NET Core MVC application developed to learn modern web development practices and improve my C# ASP.NET skills.
                </p>

                <div class="card mb-4">
                    <div class="card-body text-start">
                        <h5 class="card-title">Technical Highlights</h5>
                        <ul class="list-unstyled">
                            <li><i class="bi bi-code-square me-2"></i>Built with ASP.NET Core MVC and C#</li>
                            <li><i class="bi bi-database me-2"></i>Entity Framework Core with SQL Server</li>
                            <li><i class="bi bi-lightning me-2"></i>Real-time updates using SignalR</li>
                            <li><i class="bi bi-robot me-2"></i>Automated web scraping system</li>
                            <li><i class="bi bi-shield-check me-2"></i>Identity-based authentication and authorization</li>
                        </ul>
                    </div>
                </div>

                <div class="text-start mb-4">
                    <h5>Key Features Implemented:</h5>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check2-circle me-2"></i>Clean Architecture with Service Pattern</li>
                        <li><i class="bi bi-check2-circle me-2"></i>Automated Price Tracking System</li>
                        <li><i class="bi bi-check2-circle me-2"></i>User Management and Role-Based Access</li>
                        <li><i class="bi bi-check2-circle me-2"></i>Real-time Notification System</li>
                    </ul>
                </div>

                <div class="mt-4">
                    <a href="https://github.com/HaicoMaters/PriceComparisonWebsite" class="btn btn-outline-dark me-2" target="_blank">
                        <i class="bi bi-github me-2"></i>View Source
                    </a>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-play-fill me-2"></i>Explore Products
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
