@model Product
@{
	ViewBag.Title = "View Individual Product";
}

@functions {
	string GetDeleteModalId(Product prod)
	{
		return "#deleteModal" + prod.ProductId;
	}

	string GetModalId(Product prod)
	{
		return "deleteModal" + prod.ProductId;
	}
}

<h1>@Model.Name</h1>
<div class="col-md-4">
	<form asp-action="delete" asp-controller="product" method="post">
		<input type="hidden" name="id" value="@Model.ProductId" />
		<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@GetDeleteModalId(Model)">
						<i class="bi bi-trash">Remove Product</i>
					</button>
		<div class="modal fade" id="@GetModalId(Model)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header">
						<h1 class="modal-title fs-5" id="exampleModalLabel">Are you sure you want to remove @Model.Name?</h1>
									<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
								</div>
								<div class="modal-footer">
									<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
									<button type="submit" class="btn btn-danger">Remove</button>
								</div>
							</div>
						</div>
					</div>
	</form>
</div>

