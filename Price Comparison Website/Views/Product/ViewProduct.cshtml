@model Product
@{
	ViewBag.Title = "View Individual Product";
}

@functions {
	string GetDeleteModalId(Product prod)
	{
		return "#deleteModal" + prod.ProductId;
	}

	string GetModalId(Product prod)
	{
		return "deleteModal" + prod.ProductId;
	}
}

<h1>@Model.Name</h1>
<div class="col-md-12">
    <input type="hidden" name="id" value="@Model.ProductId" />
    <div class="row">
        <!-- Image Section (Left Side) -->
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card mb-3">
                <img src="@Url.Content(Model.ImageUrl)"
                     class="card-img-top img-fluid"
                     alt="@Model.Description"
                     style="max-width: 100%; height: auto; object-fit: cover;" />
            </div>
            <!-- Space below the image for additional content -->
            <div class="mt-3">
                <h3>Additional Information</h3>
                <p>@Model.Description</p>
            </div>
        </div>

        <!-- Listings Section (Right Side) -->
        <div class="col-lg-6 col-md-12">
            <h2 class="mb-3">Listings</h2>
            <div class="list-group">
            @if (Model.PriceListings != null)
            {
                @foreach (PriceListing listing in Model.PriceListings)
                {
                        <a href="#" class="list-group-item list-group-item-action">
                            @listing.Vendor.Name @listing.Price.ToString("C") @listing.PurchaseUrl
                            <a asp-action="AddEdit" asp-controller="PriceListing" class="btn btn-primary">Update Listing</a>
                        </a>
                }
            }
            </div>
        </div>
    </div>
</div>

<a asp-action="AddEdit" asp-controller="PriceListing" class="btn btn-primary">Add Listing</a>
<form asp-action="delete" asp-controller="product" method="post">
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@GetDeleteModalId(Model)">
        <i class="bi bi-trash">Remove Product</i>
    </button>
    <div class="modal fade" id="@GetModalId(Model)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Are you sure you want to remove @Model.Name?</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Remove</button>
                </div>
            </div>
        </div>
    </div>
</form>

